@require 'vendorprefix.styl'
@require 'config.styl'

body
  font 600 14px $font
  background $background
  text-shadow: 1px 1px 1px rgba(0,0,0,0.004);
  text-rendering: optimizeLegibility !important;
  -webkit-font-smoothing: antialiased !important;

h1
  font-size $h1-size

h2
  font-size $h2-size

h3
  font-size $h3-size

h4
  font-size $h4-size

h5
  font-size $h5-size

h6
  font-size $h6-size

h1,h2,h3,h4,h5,h6
  margin 1.5em 0

p
  margin 1em 0
  font-size $p-size
  line-height $line-height
  color $paragraph
  
a
  text-decoration none
  color $paragraph
  &:hover
    color $purple
    
button
  outline none
  border none
  background none
  &:hover
  &.checked
    cursor pointer
    
/////////////////////// Misc
    
.gradient
  z-index -1
  position absolute
  top 0
  left 0
  right 0
  height 50vh
  background: #ffffff;
  background: -moz-linear-gradient(top,  #ffffff 20%, $background 100%);
  background: -webkit-linear-gradient(top,  #ffffff 20%,$background 100%);
  background: linear-gradient(to bottom,  #ffffff 20%,$background 100%);

.line
    margin 10px 0
    height 1px
    background $line

/////////////////////// Padding fix to match grid

.hero,
.filters
  .column.column
    padding 15px 25px
.sidebar
  padding 0 0 0 15px

/////////////////////// Hero

.hero
  padding 100px 0 50px 0
  a 
    float left
    .logo
      width 130px
      height 24px
      background url(../img/logo.svg) left center no-repeat
      background-size contain
  h1 
    color $paragraph
    font-size 18px
    margin 0
  p 
    font-size 15px
              

/////////////////////// Filters

.filters
  span 
    font-size 14px
    font-weight 600
    color $heading

.filters
  .device
    button
      padding 10px 0
      display block
      
.filters
  .orientation
    text-align center
    @media (min-width 600px)
      float right
    span
    button
      padding 0 10px
    button:last-of-type
      padding 0 0 0 10px
      
.filters
  span.title
    display block
    padding 0 10px 15px 0
    @media (min-width 600px)
      display none
      
.filter
  .filter-list
    button
      font-size 13px
      font-weight 600
      color $paragraph
      &:hover
      &.checked
        color $purple
        cursor pointer
        
.filters.desktop
  display none
  @media (min-width 600px)
    display block
        
.filters.mobile
  margin-top 50px
  @media (min-width 600px)
    display none
  
/////////////////////// Sidebar

aside.sidebar
  font-size 0
  position relative
  @media (min-width 600px)
    width 170px
    display inline-block
    vertical-align top
    
/////////////////////// Grid

card()
  position relative
  display block
  padding 90px 10px
  background #FFFFFF
  border-radius $border-radius
  box-shadow 0px 26px 40px -24px rgba(0, 0, 0, 0.20)
  

section.grid
  font-size 0
  position relative
  @media (min-width 600px)
    width calc(100% - 180px)
    display inline-block
    
.grid-content
  > .column.column.item
    padding 25px

.card
  card()
  text-align center
  transition 300ms
  &.border
    box-shadow 0px 5px 18px -8px rgba(0, 0, 0, 0.20) !important
    transform scale(0.98)
    opacity 0.7

.card
  img
    width 90%

.card
  .overlay
    display none
    position absolute
    text-align center
    z-index 1000
    border-radius $border-radius        
    top 0
    left 0
    bottom 0
    right 0
    height 100%
    width 100%
    background alpha(#FBFCFD, 0.9)
    span
      position absolute
      margin auto
      width 100%
      left 0
      right 0
      top 48%
      color $purple
      font-size 14px

.card
  input
    z-index 1010
    position absolute
    top 26px
    right 26px
    cursor pointer
    width 46px
    height 46px
    opacity 0

.card
  input
    &:checked
      ~ span
        background #F1F4F8
        > i.icon-plus
          display none
        > i.icon-check
          display block !important
      &:hover
        ~ span
          background #F1F4F8
      ~ .overlay
        display block !important
    &:hover
      ~ span
        background #F7F9FA
        > i 
          color $purple
.card
  > span
    z-index 1000
    position absolute
    top 26px
    right 26px
    border-radius 36px
    display block
    width 46px
    height 46px
  > span i
    position absolute
    font-size 16px
    left 15px
    top 15px
    color $purple
    &.icon-plus
      display block
    &.icon-check
      display none

.card
  .downloadzip
    position absolute
    color $purple
    bottom 30px
    left 0
    right 0
    margin 0
    text-align center
    font-size 14px
    font-weight 600
    span
      &:hover
        color alpha($purple, 0.8)
        cursor pointer
          
.end 
  text-align center
  font-size 13px
  color $paragraph
  padding 30px 0 55px 0
  font-style italic
  font-weight 600
  a 
    color $paragraph
    border-bottom 1px solid $line
    &:hover
      color $purple
      border-bottom 1px solid $purple
          
@media (min-width 900px)
  section
    .row
      > .column.column.item
        width 50%
        
@media (min-width 1200px)
  section
    .row
      > .column.column.item
        width (100/3) + '%'
          
.download
  margin-bottom 20px
  button
    width auto
          
.zipit
  display none
  
/////////////////////// Footer
    
.footer
  position relative
  
.footer
  .wrap 
    padding 0 25px
    
.footer
  .footer-links
    padding 150px 0
    
.footer
  h6
    margin 0.5em auto
    font-weight 600
    width 50%
    color $heading

.footer
  ul 
    margin 0 auto
    list-style none
    width 50%
    li 
      font-size 14px
      padding 5px 0
      a
        color $paragraph
        font-weight 600
        &:hover
          color $purple
          
.footer
  p 
    text-align center
    font-weight 600
    color $paragraph
    a 
      color $paragraph
      border-bottom 1px solid $line
      &:hover
        color $purple
        border-bottom 1px solid $purple

.footer
  span 
    position relative
    display inline-block
    width 18px
    height 18px
    margin 0 2px
    i 
      position absolute
      top 6px
      left 0
      font-size 16px
      
  
/////////////////////// Download Collection

.download-collection
  z-index 9999
  position fixed
  width 260px
  right 50px
  bottom 50px
  margin auto
  transform translateY(200%)
  transition 300ms
  
.download-collection
  button
    width 100%
    font-size 13px
    padding 25px
    color #fff
    background $purple
    border-radius $border-radius + 4px
    transform scale(0.96)
    transition 150ms
    overflow hidden
    &.shadow
      transform scale(1)
      box-shadow  0px 20px 40px -20px rgba(0,0,0,0.8)
      &:hover
        transform scale(1.025)
        box-shadow  0px 20px 45px -20px rgba(0,0,0,0.7)
    div
      float left
    .button-label
      width 70%
      text-align right
      font-size 13px
    .collection-total
      width 30%
      position relative
      span 
        position absolute
        top -2px
        text-align center
        width 20px
        height 20px
        border 1px solid #fff
        font-size 11px
        line-height 18px
        border-radius $border-radius
  &.appear
    transform translateY(0)

.countAnim 
  -webkit-animation countAnim 350ms forwards
  animation countAnim 350ms forwards

@keyframes countAnim 
  50% 
    opacity 0
    -webkit-transform translate3d(0, 35px, 0)
    transform translate3d(0, 35px, 0)

  51% 
    opacity 0
    -webkit-transform translate3d(0, -35px, 0)
    transform translate3d(0, -35px, 0)

  100% 
    opacity 1
    -webkit-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    
/////////////////////// Downloading Alert
.alert-wrap
  z-index 9999
  position fixed
  width 300px
  right 50px
  bottom 50px
  margin auto
  transform translateY(200%)
  transition 300ms
  &.appear
    transform translateY(0)
    
.alert 
  padding 25px
  background $purple
  border-radius $border-radius + 4px
  transition 300ms
  transform scale(0.98)
  &.shadow
    transform scale(1)
    box-shadow  0px 20px 40px -20px rgba(0,0,0,0.8)
    
.alert-label
  color #fff
  font-size 14px
  padding-left 60px
  span 
    position absolute
    top 24px
    left 40px
  span i
    font-size 22px