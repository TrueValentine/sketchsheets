@require 'vendorprefix.styl'
@require 'config.styl'

h1
  font-size $h1-size

h2
  font-size $h2-size

h3
  font-size $h3-size

h4
  font-size $h4-size

h5
  font-size $h5-size

h6
  font-size $h6-size

h1,h2,h3,h4,h5,h6
  margin 1.5em 0

p
  font-size $p-size
  line-height $line-height
  margin 1em 0
  
card()
  display block
  position relative
  border 1px solid $line
  background #FFFFFF
  border-radius $border-radius
  padding 90px 10px

stripes()
  background repeating-linear-gradient(
  45deg,
  #fff,
  #fff 4px,
  alpha(#465298, 0.1) 1px,
  alpha(#465298, 0.1) 5px)

body
  font 400 10px $font
  background #FFFFFF
  
a
  text-decoration none
  color $paragraph
  font-weight 400  
  &:hover
    color $purple

.line
    margin 10px 0
    height 1px
    background $line
    
button
  outline none
  border none
  background none
  &:hover
  &.checked
    cursor pointer

//\\//\\//\\//\\//\\//\\//\\//\\//\\ Padding fix to match grid

.hero,
.filters
  .column.column
    padding 15px 25px
.sidebar
  padding 0 0 0 15px

//\\//\\//\\//\\//\\//\\//\\//\\//\\ Hero      
.hero
  padding 100px 0 60px 0
  a 
    float left
    .logo
      width 131px
      height 24px
      background url(../img/logo.svg) left center no-repeat
      background-size contain
  h1 
    color $paragraph
    font-size 16px
    font-weight 300
    margin 0
    span
      color $purple
      font-weight 400
              

//\\//\\//\\//\\//\\//\\//\\//\\//\\ Filters

.filters
  span 
    font-weight 400
    font-size 13px
    color $heading
  .device
    button
      padding 10px 0
      display block
  .orientation
    float right
    span
    button
      padding 0 10px
    button:last-of-type
      padding 0 0 0 10px
  .filter-list
    button
      font-size 12px
      color $paragraph
      font-weight 400
      &:hover
      &.checked
        color $purple
        cursor pointer
        
//\\//\\//\\//\\//\\//\\//\\//\\//\\ Sidebar

.sidebar
  @media (min-width 600px)
    width 180px
    display inline-block
    vertical-align top
    
//\\//\\//\\//\\//\\//\\//\\//\\//\\ Grid
.grid
  @media (min-width 600px)
    width calc(100% - 180px)
    display inline-block
    vertical-align top
.row
  > .column.column.item
    width 100%
    padding 25px
    > .card
      card()
      text-align center
      a.lightbox
        &:hover
          cursor zoom-in
      img
        width 90%
      &.border
        border 1px solid $purple !important 
      > .overlay
        display none
        position absolute
        text-align center
        z-index 1000
        border-radius $border-radius        
        top 0
        left 0
        bottom 0
        right 0
        height 100%
        width 100%
        background alpha(#ffffff, 0.9)
        > span
          position absolute
          left 0
          right 0
          top 48%
          color $purple
          font-size 14px
      > input
        z-index 1010
        position absolute
        top 20px
        right 20px
        cursor pointer
        width 36px
        height 36px
        opacity 0
        &:checked
          ~ span
            border 1px solid $purple
            > i.icon-plus
              display none
            > i.icon-check
              display block !important
          ~ .overlay
            display block !important
          &:hover
            ~ span
              border 1px solid alpha($purple, 0.8)
              > i 
                color $purple
        &:hover
          ~ span
            border 1px solid alpha($purple, 0.8)
            > i 
              color $purple
      > span
        z-index 1000
        position absolute
        top 20px
        right 20px
        border-radius $border-radius
        display block
        border 1px solid rgba(0,0,0,0)
        width 36px
        height 36px
        > i
          position absolute
          font-size 15px
          left 9px
          top 9px
          color $purple
          &.icon-plus
            display block
          &.icon-check
            display none
      > .downloadzip
        position absolute
        color $purple
        padding 30px 0
        bottom 0
        left 0
        right 0
        text-align center
        font-size 14px
        font-weight 400
        &:hover
          color alpha($purple, 0.8)
        > span
          display inline-block
          margin auto
          
.end 
  text-align center
  font-size 13px
  color $paragraph
  padding 15px 0 45px 0
  font-style italic
  a 
    color $paragraph
    border-bottom 1px solid $line
    &:hover
      color $purple
      border-bottom 1px solid $purple
          
@media (min-width 900px)
  section
    .row
      > .column.column.item
        width 50%
        
@media (min-width 1200px)
  section
    .row
      > .column.column.item
        width (100/3) + '%'
          
.download
  margin-bottom 20px
  button
    width auto
          
.zipit
  display none
  
//\\//\\//\\//\\//\\//\\//\\//\\//\\ Footer
    
.footer
  .wrap 
    padding 0 25px
  background #FFF
  .footer-links
    padding 100px 0
  h6
    margin 0.5em auto
    font-weight 400
    width 50%
    color $heading
  ul 
    margin 0 auto
    list-style none
    width 50%
    li 
      font-size 13px
      padding 5px 0
      a
        color $paragraph
        font-weight 400
        &:hover
          color $purple
  p 
    text-align center
    font-weight 400
    color $paragraph
  span 
    position relative
    display inline-block
    width 18px
    height 18px
    margin 0 2px
    i 
      position absolute
      top 6px
      left 0
      font-size 16px
      color #FF82A2
      
  
//\\//\\//\\//\\//\\//\\//\\//\\//\\ Download Collection

.download-collection
  z-index 9999
  position fixed
  width 260px
  right 50px
  bottom 50px
  margin auto
  transform translateY(200%)
  transition 300ms
  button
    width 100%
    font-size 13px
    padding 25px
    color #fff
    background $purple
    border-radius $border-radius + 4px
    box-shadow  0px 20px 40px -20px rgba(0,0,0,0.8)
    transition 150ms
    overflow hidden
    &:hover
      transform scale(1.025)
      box-shadow  0px 20px 45px -20px rgba(0,0,0,0.7)
    div
      float left
    .button-label
      width 70%
      text-align right
    .collection-total
      width 30%
      position relative
      span 
        position absolute
        top -2px
        text-align center
        width 20px
        height 20px
        border 1px solid #fff
        font-size 11px
        line-height 18px
        border-radius $border-radius
  &.appear
    transform translateY(0)

.countAnim 
  -webkit-animation countAnim 350ms forwards
  animation countAnim 350ms forwards

@keyframes countAnim 
  50% 
    opacity 0
    -webkit-transform translate3d(0, 35px, 0)
    transform translate3d(0, 35px, 0)

  51% 
    opacity 0
    -webkit-transform translate3d(0, -35px, 0)
    transform translate3d(0, -35px, 0)

  100% 
    opacity 1
    -webkit-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)