// Grub Break Points
$screen-phone = 400px
$screen-tablet = 600px
$screen-desktop = 900px
$screen-desktop-large = 1200px
$screen-desktop-xlarge = 1400px

// Grub Grid
$wrap-width = 1400px
$number-of-columns = 12
$gutter = 10px

// Text
$base-size = 10px
$p-size = 14px
$line-height = $p-size + 8px
$h1-size = $p-size + 10px
$h2-size = $p-size + 8px
$h3-size = $p-size + 6px
$h4-size = $p-size + 4px
$h5-size = $p-size + 2px
$h6-size = $p-size
$font = 'Open Sans', 'Helvetica Neue', 'Arial', sans-serif

// Colors
$background = #EDF0F5
$dark = #E4E6EB
$dark-text = #A3A7B0
$darker-text = #888B91
$heading = #5A6170
$paragraph = #9DA6B8
$line = #DCDCDC
$purple = #6C63FF
// Contrast
$background-contrast = #5F5E76
$heading-contrast = #FFFFFF
$paragraph-contrast = #C6C1E1
$line-contrast = #C6C1E1

// Elements
$border-radius = 4px